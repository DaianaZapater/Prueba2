@using Domain.Models
@model LibreriaWebApp.Models.LibroIndexViewModel

@{
    ViewData["Title"] = "Detalle de Libros";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <input type="text" name="ISBN" class="form-control" placeholder="Buscar por ISBN..." value="@Model.ISBN"/>
            </div>
            <div class="col-4">
                    <button type="submit" class="btn btn-primary">Buscar</button>            
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-success" style="float: right">Crear Nuevo</a>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>ISBN</th>
        <th>Editorial</th>
        <th>Tema</th>
        <th>Fecha de Publicacion</th>
        <th>Precio</th>
        <th>Paginas</th>
        <th>Stock</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var Libro in Model.Libros)
    {
        <tr>
            <td>@Libro.Id</td>
            <td>@Libro.Titulo</td>
            <td>@Libro.ISBN</td>
            <td>@Libro.EditorialDto.Nombre</td>
            <td>@Libro.TemaDto.Nombre</td>
            <td>@Libro.FechaPublicacion</td>
            <td>@Libro.PrecioSugerido</td>
            <td>@Libro.CantidadPaginas</td>
            <td>@Libro.Stock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@Libro.Id" class="btn btn-info">Editar</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@Libro.Id" method="get" >
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>