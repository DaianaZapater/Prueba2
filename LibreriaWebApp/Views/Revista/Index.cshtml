@using Domain.Models
@model LibreriaWebApp.Models.RevistaIndexViewModel

@{
    ViewData["Title"] = "Detalle de revistas";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre..." value="@Model.nombre"/>
            </div>
            <div class="col-4">
                    <button type="submit" class="btn btn-primary">Buscar</button>            
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-success" style="float: right">Crear Nuevo</a>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Editorial</th>
        <th>Tema</th>
        <th>Fecha de Publicacion</th>
        <th>Precio</th>
        <th>Paginas</th>
        <th>Stock</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var revista in Model.Revistaes)
    {
        <tr>
            <td>@revista.Id</td>
            <td>@revista.Nombre</td>
            <td>@revista.EditorialDto.Nombre</td>
            <td>@revista.TemaDto.Nombre</td>
            <td>@revista.FechaPublicacion</td>
            <td>@revista.PrecioSugerido</td>
            <td>@revista.CantidadPaginas</td>
            <td>@revista.Stock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@revista.Id" class="btn btn-info">Editar</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@revista.Id" method="get" >
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>