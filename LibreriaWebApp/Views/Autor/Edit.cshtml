@using Domain.Dtos
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LibreriaWebApp.Models.AutorFormViewModel

@{
    ViewData["Title"] = "Editar Autor";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Message
    </div>
}

<form asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label asp-for="Nombre" class="control-label+"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
        <label  class="control-label">Nacionalidad</label>
        <div class="form-group">
            <select asp-for="NacionalidadId" class="form-control" >
               <option value = 0>-- seleccionar la nacionalidad --</option>
               @if (Model.posiblesNacionalidades != null)
               {
                   @foreach (NacionalidadDto nacionalidadDto in Model.posiblesNacionalidades)
                   {
                      <option value = "@nacionalidadDto.Id">@nacionalidadDto.Nombre</option>
                   }
               }
           </select>
       </div>
        
        <label asp-for="FechaNacimiento" class="control-label"></label>
        <input asp-for="FechaNacimiento" class="form-control"/>
        <span asp-for="FechaNacimiento" class="text-danger"></span>
        
        <label asp-for="FechaDefuncion" class="control-label"></label>
        <input asp-for="FechaDefuncion" class="form-control"/>
        <span asp-for="FechaDefuncion" class="text-danger"></span>
    </div>

    <div class="row mt-5">
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
    </div>
</form>


