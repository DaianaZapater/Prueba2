@model LibreriaWebApp.Models.AutorFormViewModel

@{
    ViewData["Title"] = "Eliminar Autor";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<!-- Mostrar detalles del Autor a eliminar -->
<div class="mt-3">
    <h3>Estás a punto de eliminar el siguiente Autor:</h3>
    <p>ID: @Model.Id</p>
    <p>Nombre: @Model.Nombre</p>
    <p>Nacionalidad: @Model.NacionalidadDto.Nombre</p>
    <p>Fecha de nacimiento: @Model.FechaNacimiento</p>
    <p>Fecha de defunción: @Model.FechaDefuncion</p>
    
</div>

<!-- Confirmación de la acción de eliminación -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="row mt-5">
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
    </div>
</form>