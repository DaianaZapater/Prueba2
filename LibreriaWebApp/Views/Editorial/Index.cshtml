@model LibreriaWebApp.Models.EditorialIndexViewModel

@{
    ViewData["Title"] = "Detalle de Editorial";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <input type="text" name="Nombre" class="form-control" placeholder="Buscar por nombre..." value="@Model.Nombre"/>
            </div>
            <div class="col-4">
                    <button type="submit" class="btn btn-primary">Buscar</button>            
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-success" style="float: right">Crear Nuevo</a>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Pais de Origen</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var Editorial in Model.EditorialesDto)
    {
        <tr>
            <td>@Editorial.Id</td>
            <td>@Editorial.Nombre</td>
            <td>@Editorial.PaisOrigenDto.Nombre</td>
            <td>
                <a asp-action="Edit" asp-route-id="@Editorial.Id" class="btn btn-info">Editar</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@Editorial.Id" method="get" >
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>